                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#F7B7A3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

